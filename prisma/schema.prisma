generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  category    String
  imageUrl    String
  description String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@map("projects")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("admins")
}
