generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String         @id @default(uuid())
  title       String
  slug        String         @unique
  category    String
  imageUrl    String
  description String?
  featured    Boolean        @default(false)
  createdAt   DateTime       @default(now())
  benefits    Json?
  ctaLink     String?
  ctaText     String?
  features    Json?
  intro       String?
  perfectFor  Json?
  images      ProjectImage[]

  @@map("projects")
}

model ProjectImage {
  id        String   @id @default(uuid())
  projectId String
  imageUrl  String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_images")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("admins")
}
